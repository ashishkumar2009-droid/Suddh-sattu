            <!-- Success State -->
            <div id="order-success" class="hidden text-center py-10">
                <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="ph-fill ph-check text-4xl text-green-600"></i>
